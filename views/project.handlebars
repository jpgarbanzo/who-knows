      <link href="/stylesheets/ie.css" media="screen, projection" rel="stylesheet" type="text/css" />
    <![endif]-->

  </head>

  <body>



    <header role="banner">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <a class="navbar-brand" title="" href="/"><img src="/images/assets/logo.svg"/></a>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Michael<span class="caret"></span></a>
                      <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Account</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Log out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</header>

<div class="site-container">

      <div class="row person-profile project">
        <div class="container">

                  <div class="col-xs-3 picture">
                      <img src="{{owner_photo}}" class="person-picture"/>
                  </div>

                  <div class="col-xs-4 details">
                      <div class="name important-details">
                          {{owner_name}}
                      </div>
                      <div class="profession important-details">
                          {{profession}}
                      </div>
                  </div>
          </div>
        </div>

        <div class="container project-view">
          <div class="col-xs-6">
            <div class="project-image">
              <img src="{{picture}}">
            </div>
          </div>
          <div class="col-xs-6">

            <div class="row project-row project-team">
              <div class="col-xs-4">
                <i class="icon-users"></i><span class="strong">Team:</span>
              </div>
              <div class="col-xs-8">
              {{#each members}}
                <span><img class="mini-pic" src="{{picture}}" alt="{{name}}"></span>
              {{/each}}
              </div>
            </div>


            <div class="row project-row project-tech">
              <div class="col-xs-4">
                <i class="icon-cog"></i> <span class="strong">Technologies:</span>
                </div>
              <div class="col-xs-8">
                {{#each tech}}
                <span class="tech">
                {{name}} </span>
                {{/each}}
              </div>
            </div>

          </div>
        </div>

<footer class="footer">
      <div class="container">
        <p class="author text-muted">by Frailes Inc.</p>
      </div>
    </footer>


